<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/red_brown_700"
    app:cardCornerRadius="16dp"
    app:contentPadding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/level_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monomachus"
            android:letterSpacing="0.05"
            android:text="Ниво 1"
            android:textColor="@color/antique_white_400"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/level_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monomachus"
            android:letterSpacing="0.05"
            android:text="Обяснение и заглавие"
            android:textColor="@color/antique_white_600"
            android:textSize="16dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
